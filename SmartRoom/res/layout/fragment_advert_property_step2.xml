<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Property Postcode: "
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/propertyAdvertPostCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Postcode" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Property Address: "
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/propertyAdvertAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Address" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/propertyAdvertCountryTXTVIEW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country: "
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <Spinner
                    android:id="@+id/propertyAdvertCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Furnishing: "
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <Spinner
                    android:id="@+id/propertyAdvertFurnishing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/furnishing" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" >

                <Button
                    android:id="@+id/setAvailabilityDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set Availability Date: " />

                <EditText
                    android:id="@+id/propertyAdvertDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Date" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/propertyAdvertReferenceRequired"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reference Required" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:weightSum="2" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/propertyAdvertTakePic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/advert_custom"
                        android:gravity="center"
                        android:text="Take Picture"
                        android:textColor="#fff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/propertyAdvertBrowsePic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/advert_custom"
                        android:gravity="center"
                        android:text="Browse Picture"                        
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/propertyAdvertPic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_launcher"  />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#444"
                    android:padding="5dp"
                    android:text="Amnesties"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#fff" />

                <CheckBox
                    android:id="@+id/propertyAdvertParking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Parking: " />

                <CheckBox
                    android:id="@+id/propertyAdvertGardenRoofTerrace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gargden/Roof/Terrace" />

                <CheckBox
                    android:id="@+id/propertyAdvertGarage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Garage" />

                <CheckBox
                    android:id="@+id/propertyAdvertBalconyPatio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Balcony/Patio" />

                <CheckBox
                    android:id="@+id/propertyAdvertDisabledAccess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disabled Acess" />

                <CheckBox
                    android:id="@+id/propertyAdvertBroadband"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Broadband Available" />

                <CheckBox
                    android:id="@+id/propertyAdvertBillIncluded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bill Included" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>